{
  "name": "@emerson-eps/eslint-config",
  "version": "0.0.0-development",
  "description": "Shared ESLint config for Emerson E&P Software",
  "type": "module",
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript"
  ],
  "homepage": "https://github.com/emerson-eps/eslint-config",
  "bugs": {
    "url": "https://github.com/emerson-eps/eslint-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emerson-eps/eslint-config.git"
  },
  "license": "MIT",
  "main": "index.js",
  "files": [
    "eslint.config.js",
    "index.js"
  ],
  "scripts": {
    "build": "npm run print-config:file && tsc",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix --max-warnings=0",
    "lint:verbose": "eslint --max-warnings=0 -f stylish .",
    "prettier:fix": "prettier . --write",
    "print-config": "eslint --print-config eslint.config.js",
    "print-config:file": "eslint --print-config eslint.config.js > config.json",
    "semantic-release": "semantic-release",
    "test": "prettier . --check && eslint . --max-warnings=0",
    "tsc": "tsc"
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.28.4",
    "@eslint/js": "^9.38.0",
    "@types/eslint-plugin-jsx-a11y": "~6.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-cypress": "^5.2.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsdoc": "^61.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-testing-library": "^7.13.3",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.4.0",
    "prettier": "^3",
    "typescript-eslint": "^8.46.2"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "semantic-release": "^24.2.9",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "eslint": "^9",
    "prettier": "^3",
    "typescript": ">= 5.0"
  },
  "release": {
    "preset": "conventionalcommits"
  },
  "volta": {
    "node": "22.21.1"
  }
}
